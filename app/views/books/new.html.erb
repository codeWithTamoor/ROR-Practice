<h1>New Book</h1>

<%= form_with(model: @book) do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :year_published %><br>
    <%= form.number_field :year_published %>
  </p>

  <p>
    <%= form.label :isbn %><br>
    <%= form.text_field :isbn %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: 0.01 %>
  </p>

  <p>
    <%= form.label :out_of_print %><br>
    <%= form.check_box :out_of_print %>
  </p>

  <p>
    <%= form.label :views %><br>
    <%= form.number_field :views %>
  </p>

  <p>
    <%= form.label :supplier_id %><br>
    <%= form.number_field :supplier_id %>
  </p>

  <p>
    <%= form.label :author_id %><br>
    <%= form.number_field :author_id %>
  </p>

  <%= form.submit "Create Book" %>
<% end %>

<%= link_to "Back to Books", books_path %>
