<h1><%= action_name.capitalize %> Review</h1>

<%= form_with(model: [@book, @review]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit %></p>
<% end %>

<%= link_to "Back", book_reviews_path(@book) %>
